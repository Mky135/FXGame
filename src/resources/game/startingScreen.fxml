<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="pane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="game.controller.StartController">
   <children>
      <Label alignment="CENTER" contentDisplay="CENTER" layoutX="100.0" layoutY="63.0" prefHeight="100.0" prefWidth="400.0" text="Are you ready to start?" textAlignment="CENTER" wrapText="true">
         <font>
            <Font size="36.0" />
         </font></Label>
      <Button fx:id="yes" layoutX="100.0" layoutY="200.0" mnemonicParsing="false" onAction="#switchToMainScene" prefWidth="150.0" text="Yes">
         <font>
            <Font size="36.0" />
         </font>
      </Button>
      <Button fx:id="no" layoutX="350.0" layoutY="200.0" mnemonicParsing="false" onAction="#exit" prefWidth="150.0" text="No">
         <font>
            <Font size="36.0" />
         </font>
      </Button>
   </children>

    <stylesheets>
        <URL value="@startingScreen.css" />
    </stylesheets>
</AnchorPane>
